{
  "name": "eventapp-server",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "populatedb": "npx ts-node ./scripts/loadData.ts",
    "clean": "rm -rf build && mkdir build",
    "build": "tsc",
    "start": "node build/src/app.js",
    "dev": "nodemon",
    
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 jest --reporters default jest-stare --coverage --detectOpenHandles --runInBand --testTimeout=4000",
    "heroku-postbuild": "npm run build",
    "lint": "npm run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js -- --fix",
    "doc:generate":"swagger-cli bundle src/api/swagger/openapi.yaml --outfile ./swagger/swagger.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andresjpulido/eventapp-server.git"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "jest-stare/*",
      "coverage/*"
    ],
    "delay": 2500
  },
  "author": "@andresjpb",
  "license": "MIT",
  "keywords": [
    "heroku",
    "nodejs",
    "mongoose",
    "express",
    "rest"
  ],
  "bugs": {
    "url": "https://github.com/andresjpulido/eventapp-server/issues"
  },
  "homepage": "https://github.com/andresjpulido/eventapp-server#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.5",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.5.0",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "typedi": "^0.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.0",
    "jest-stare": "^2.3.0",
    "nodemon": "^2.0.12",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
